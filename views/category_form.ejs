<h1><%= title %></h1>
<form action="" method="post">
  <div class="form-group">
    <label for="name">Category: </label>
    <input type="text" id="name" class="form-control" placeholder="Phones, Headphones etc." name="name" required value="<%= category === undefined ? '' : category.name %>">
  </div>
  <div class="form-group">
    <label for="description">Description: </label>
    <textarea name="description" id="description" class="form-control" placeholder="Description" required><%= category === undefined ? '' : category.description %></textarea>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
<% if(errors.length > 0) { %>
<ul>
  <% errors.forEach((error) => { %>
  <li><%- error.msg %></li>
  <% }) %>
</ul>
<% } %>
